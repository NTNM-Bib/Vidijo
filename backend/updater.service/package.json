    "axios": "^0.19.0",
    "bcrypt": "^4.0.1",
    "colors": "^1.3.3",
    "dom-parser": "^0.1.5",
    "dotenv": "^7.0.0",
    "html-to-text": "^5.1.1",
    "image-downloader": "^3.5.0",
    "juice": "^5.2.0",
    "mongo-querystring": "^4.1.1",
    "mongodb": "^3.1.13",
    "mongoose": "^5.4.11",
    "mongoose-hidden": "^1.7.1",
    "mongoose-paginate-v2": "^1.0.22",
    "mongoose-unique-array": "^0.3.1",
    "morgan": "^1.9.1",
    "natives": "^1.1.6",
    "qs": "^6.7.0",
    "rimraf": "^2.6.3",
    "uuid": "^3.3.2",
    "validator": "^11.1.0",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.4.2"
  },
  "devDependencies": {
    "@hapi/boom": "^7.4.2",
    "@types/axios": "^0.14.0",
    "@types/bcrypt": "^3.0.0",
    "@types/chai": "^4.1.7",
    "@types/colors": "^1.2.1",
    "@types/dotenv": "^6.1.1",
    "@types/es6-shim": "^0.31.39",
    "@types/gulp": "^4.0.6",
    "@types/helmet": "0.0.44",
    "@types/html-to-text": "^1.4.31",
    "@types/mocha": "^5.2.5",
    "@types/mongoose": "^5.3.12",
    "@types/mongoose-paginate-v2": "^1.0.2",
