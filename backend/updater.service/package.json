{
  "name": "vidijo-updater-service",
  "version": "1.1.0",
  "description": "This service fetches the newest articles of journals in the database",
  "main": "index.js",
  "scripts": {
    "start": "npm run dev",
    "prod": "tsc && cross-env NODE_ENV=production npm run forever",
    "dev": "tsc && concurrently \"npm run build-and-watch\" \"nodemon --legacy-watch dist/src/index.js\"",
    "docker": "tsc && node dist/src/index.js",
    "build-and-watch": "gulp && concurrently \"tsc -w\" \"gulp watch\"",
    "forever": "forever start dist/src/index.js",
    "test": "mocha -r ts-node/register test/sanitizer.test.ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "private": true,
  "author": "INM – Leibniz-Institut für Neue Materialien gGmbH",
  "license": "GPLv3",
  "dependencies": {
    "axios": "^0.21.0",
    "bcrypt": "^5.0.0",
    "colors": "^1.4.0",
    "dom-parser": "^0.1.6",
    "dotenv": "^8.2.0",
    "html-to-text": "^5.1.1",
    "image-downloader": "^4.0.1",
    "juice": "^7.0.0",
    "mongo-querystring": "^4.1.1",
    "mongodb": "^3.6.2",
    "mongoose": "^5.10.11",
    "mongoose-hidden": "^1.9.0",
    "mongoose-paginate-v2": "^1.3.9",
    "mongoose-unique-array": "^0.3.4",
    "morgan": "^1.10.0",
    "natives": "^1.1.6",
    "qs": "^6.9.4",
    "rimraf": "^3.0.2",
    "uuid": "^8.3.1",
    "validator": "^13.1.17",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0"
  },
  "devDependencies": {
    "@hapi/boom": "^9.1.0",
    "@types/axios": "^0.14.0",
    "@types/bcrypt": "^3.0.0",
    "@types/colors": "^1.2.1",
    "@types/gulp": "^4.0.7",
    "@types/html-to-text": "^5.1.2",
    "@types/mocha": "^8.0.3",
    "@types/mongodb": "^3.5.32",
    "@types/mongoose": "^5.7.36",
    "@types/mongoose-paginate-v2": "^1.3.8",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.6",
    "@types/qs": "^6.9.5",
    "@types/rimraf": "^3.0.0",
    "@types/uuid": "^8.3.0",
    "@types/validator": "^13.1.0",
    "@types/winston": "^2.4.4",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "gulp": "^4.0.2",
    "mocha": "^8.2.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  }
}
