    "escape-string-regexp": "^4.0.0",
    "express": "^4.17.1",
    "html-to-text": "^5.1.1",
    "http-errors": "^1.8.0",
    "image-downloader": "^4.0.1",
    "juice": "^7.0.0",
    "lodash": "^4.17.20",
    "mongo-querystring": "^4.1.1",
    "mongodb": "^3.6.2",
    "mongoose": "^5.11.6",
    "morgan": "^1.10.0",
    "natives": "^1.1.6",
