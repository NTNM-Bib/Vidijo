  "description": "Accesses DOAJ and other sources to get journals, articles and covers",
  "main": "dist/index.js",
  "scripts": {
    "start": "npm run dev:start",
    "dev:start": "concurrently \"tsc -w\" \"nodemon dist/index.js\"",
